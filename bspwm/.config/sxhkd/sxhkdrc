#
# wm independent hotkeys
#

# Launchers

# Start terminal
super + Return
	$TERMINAL

# Start a terminal running tmux
super + shift + Return
	$TERMINAL -e tmux

# Run rofi with programs in PATH
super + d
	rofi -show run	

# Run rofi with desktop programs
super + shift + d
	rofi -show drun	-show-icons

# Show emoji pick menu
super + bracketleft
	rofi -show emoji -modi emoji

# Show help menu
super + F1
	sxhkd-help

# Lock screen
super + shift + e
	betterlockscreen -l blur

# Show calculator
super + grave
	tdrop -ma -w 35% -h 50% -x 32% -y 20% alacritty -o font.size=18 -e qalc

# Launchers for common desktop programs
ctrl + alt + {e, g, w, d, f}
	{kdenlive, gimp, $BROWSER, discord, spacefm}

# Launchers for common terminal programs 
ctrl + alt + {n, c, h, r}
	$TERMINAL -e {nvim, calcurse, htop, newsboat}

# Various scripts
super + {v, c, w, p, b}
	{bmprompt, confprompt, handlerprompt, cpcolor, bgprompt}

# Media control

# Increase and decrease volume
super + {u,i}
	~/.config/polybar/polysetvol.sh -i {-,+}3%

# Increase and decrease volume
{XF86AudioLowerVolume, XF86AudioRaiseVolume}
	~/.config/polybar/polysetvol.sh -i {-,+}3%

# Toggle mute
super + m
	~/.config/polybar/polysetvol.sh -m

# Toggle mute
XF86AudioMute
	~/.config/polybar/polysetvol.sh -m

# Play next or previous track
super + ctr + {u,i}
	playerctl -p "mpd" {previous,next}

# Play next or prevoius track
{XF86AudioPrev,XF86AudioNext}
	playerctl -p "mpd" {previous,next}

# Toggle play-pause
super + ctrl + m
	playerctl -p "mpd" play-pause

# Toggle play-pause
XF86AudioPlay
	playerctl -p "mpd" play-pause

# Increase and decrease brightness
{XF86MonBrightnessUp, XF86MonBrightnessDown}
	~/.config/polybar/polysetbright.sh {-A 10, -U 10}

# Reload sxhkd
super + shift + x
	pkill -SIGUSR1 sxhkd && notify-send "sxhkd" "Key configuration reloaded"

# Toggle picom
super + shift + c
	toggleprogram "picom" "--experimental-backends"

# Take a fullscreen screenshot
Print 
	flameshot full -p ~/pix/screenshots -c

# Select a region to screenshot
Print + shift
	flameshot gui -p ~/pix/screenshots 

# Reboot and poweroff
super + shift + {r,s}
	prompt_user {"Are you sure you would like to reboot?" "reboot", "Are you sure you would like to shutdown" "poweroff"}

# Mount devices
super + F9
	mountprompt

# Unmount devices
super + F10
	umountprompt

# Keyboard layouts

# Set keyboard layout
shift + alt + {grave,1,2}
	setkblayout { ,-s us,-s latam}

#
# bspwm hotkeys
#

# Quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close/Kill a node
super + {_,shift + }q
	bspc node -{c,k}

#
# state/flags
#

# Set window tiling state
super + {t,s,f}
	bspc node -t {tiled,floating,fullscreen}

# Set window node flag
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus or send to the given desktop on the current monitor
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}.local'

# Go to next or previous desktop
super + {_,shift + }Tab
	bspc desktop -f {next, prev}

# Send the newest marked node to the newest preselected node
super + a
	bspc node newest.local -n newest.!automatic.local

# Rotate the tree 90 degrees to the left or right
super + {o, shift + o}
	bspc node @parent --rotate {90, 270}	

# Rotate the tree 180 degrees
super + alt + o
	bspc node @parent --rotate 180

#
# preselect
#

# Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Resize a window toward a certain direction
super + alt + {h,j,k,l}
	~/.config/bspwm/resize{left,down,up,right}.sh

# Big move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-40 0,0 40,0 -40,40 0}

# Small move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# Balance nodes
super + e
	bspc node @/ -B

# Swap current node and master
super + space
	bspc node -s biggest.local
