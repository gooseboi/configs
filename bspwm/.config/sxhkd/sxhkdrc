#
# wm independent hotkeys
#

# Launchers

# Start terminal
super + Return
	$TERMINAL

# Start a terminal running tmux
super + shift + Return
	$TERMINAL -e ~/.local/bin/tmuxhelper

# Run rofi with programs in PATH
super + d
	rofi -show run

# Run rofi with desktop programs
super + shift + d
	rofi -show drun	-show-icons

# Show emoji pick menu
super + bracketleft
	rofi -show emoji -modi emoji

# Show help menu
super + F1
	sxhkd-help

# Lock screen
super + shift + e
	betterlockscreen -l blur

# Show calculator
super + grave
	tdrop -ma -w 35% -h 50% -x 32% -y 20% alacritty -o font.size=16 -e qalc

# Show calculator
XF86Calculator
	tdrop -ma -w 35% -h 50% -x 32% -y 20% alacritty -o font.size=16 -e python3

# Launchers for common desktop programs
ctrl + alt + {g, w, d, f}
	{gimp, $BROWSER, discord-canary, spacefm}

# Launchers for common terminal programs
ctrl + alt + {m, n, c, h, r}
	$TERMINAL -e {ncmpcpp, nvim, calcurse, htop, run-newsboat}

# Various scripts
super + {s, v, c, w, p, b}
	{searchprompt, bmprompt, confprompt, handlerprompt, cpcolor, bgprompt}

# Media control

# Increase and decrease volume
super + {u,i}
	polysetvol -i {-,+}5%

# Increase and decrease volume
{XF86AudioLowerVolume, XF86AudioRaiseVolume}
	polysetvol -i {-,+}5%

# Toggle mute
super + m
	polysetvol -m

# Toggle mute
XF86AudioMute
	polysetvol -m

# Increase or decrease music player volume
super + shift + {u,i}
	mpc volume {-,+}5

# Play next or previous track
{XF86AudioPrev,XF86AudioNext}
	mpc {prev,next}

# Play next or previous track
super + {comma,period}
	mpc {prev,next}

# Restart song
super + shift + comma
	mpc seek 0%

# Toggle music play-pause
super + shift + m
	mpc toggle

# Pause all video on device
super + ctrl + m
	playerctl -a pause

# Toggle play-pause
XF86AudioPlay
	mpc toggle

# Increase and decrease brightness
{XF86MonBrightnessUp, XF86MonBrightnessDown}
	polysetbright {-A 10, -U 10}

# Reload sxhkd
super + shift + x
	pkill -SIGUSR1 sxhkd && notify-send "sxhkd" "Key configuration reloaded"

# Toggle picom
super + shift + c
	toggleprogram "picom" "-b"

# Toggle fcitx
super + shift + f
	toggleprogram "fcitx" "-d"

# Toggle window swallow
super + shift + v
	toggleprogram ~/.config/bspwm/bspswallow

# Toggle screenkey
super + shift + b
	toggleprogram screenkey

# Take a fullscreen screenshot
Print
	flameshot full -p ~/pix/screenshots -c

# Select a region to screenshot and save to clipboard
Print + shift + ctrl
	screenshot-try-qr clip

# Select a region to screenshot
Print + shift
	screenshot-try-qr

super + z
	boomer

# Shutdown
super + shift + s
	prompt_user "Are you sure you would like to shutdown" "poweroff"

# Power options
super + shift + ctrl + s
	powerprompt

# Mount devices
super + F9
	mountprompt

# Unmount devices
super + F10
	umountprompt

# Keyboard layouts

# Set keyboard layout
shift + alt + {grave,1,2,3}
	setkblayout { ,-l us,-l latam, -l us -v colemak}

super + F6
	toggle-touchpad

#
# bspwm hotkeys
#

# Quit/restart bspwm
super + alt + {q,r}
	bspc {quit,wm -r}

# Close/Kill a node
super + {_,shift + }q
	bspc node -{c,k}

# Same, but with mouse
super + {_, shift + }button1
	bspc node -{c,k}

#
# state/flags
#

# Set window tiling state
super + {t,y,f}
	bspc node -t {tiled,floating,fullscreen}

# Set window node flag
super + ctrl + {m,x,y,z}
	bspc node -g {marked,locked,sticky,private}

#
# focus/swap
#

# Focus the node in the given direction
super + {_,shift + }{h,j,k,l}
	bspc node -{f,s} {west,south,north,east}

# Focus or send to the given desktop on the current monitor
super + {_,shift + }{1-9,0}
	bspc {desktop -f,node -d} '^{1-9,10}'

# Go to next or previous desktop
super + {_,shift + }Tab
	bspc desktop -f {next, prev}

# Send the newest marked node to the newest preselected node
super + a
	bspc node newest.local -n newest.!automatic.local

# Rotate the tree 90 degrees to the left or right
super + {o, shift + o}
	bspc node @parent --rotate {90, 270}

# Rotate the tree 180 degrees
super + alt + o
	bspc node @parent --rotate 180

#
# preselect
#

# Preselect the direction
super + ctrl + {h,j,k,l}
	bspc node -p {west,south,north,east}

# Preselect the ratio
super + ctrl + {1-9}
	bspc node -o 0.{1-9}

# Cancel the preselection for the focused node
super + ctrl + space
	bspc node -p cancel

# Cancel the preselection for the focused desktop
super + ctrl + shift + space
	bspc query -N -d | xargs -I id -n 1 bspc node id -p cancel

#
# move/resize
#

# Resize a window toward a certain direction
super + alt + {h,j,k,l}
	~/.config/bspwm/resize{left,down,up,right}.sh

# Big move a floating window
super + shift + {Left,Down,Up,Right}
	bspc node -v {-40 0,0 40,0 -40,40 0}

# Small move a floating window
super + {Left,Down,Up,Right}
	bspc node -v {-10 0,0 10,0 -10,10 0}

# Balance nodes
super + e
	bspc node @/ -B

# Swap current node and master
super + space
	bspc node -s biggest.local

# Toggle gaps
super + {shift + g,g}
	toggleborder -l {nobar, withbar}
