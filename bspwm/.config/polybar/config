[colors]
background = #222
background-alt = #444
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
width = 100%
height = 2.5%
radius = 6.0
fixed-center = false
enable-ipc = true

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 2
padding = 1
module-margin = 1

font-0 = "NotoSansMono:size=10;1"
font-1 = "HackNerdFont:size=10;1"
font-2 = "NotoSansSymbols2:size=11;1"
font-3 = "NotoColorEmoji:fontformat=truetype:scale=10"

modules-left = date bspwm xwindow
modules-center =
modules-right = weather eth1 wlan volume memory cpu brightness battery

tray-position = right
tray-padding = 2
tray-maxsize = 24
tray-background = ${colors.background-alt}

wm-restack = bspwm

[global/wm]
margin-top = 0

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
enable-click = true
enable-scroll = false

label-focused = " %name% "
label-focused-underline = #fba922

label-occupied = " %name% "
label-occupied-foreground = #ffaa00

label-urgent = " %name% "
label-urgent-underline = #9b0a20

label-empty = " %name% "
label-empty-foreground = #555555

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "üíª "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = CPU:%percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "üóç "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = RAM: %percentage_used:2%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%: %local_ip%

label-disconnected =

ramp-signal-0 = üåß
ramp-signal-1 = üå¶
ramp-signal-2 = üå•
ramp-signal-3 = üå§
ramp-signal-4 = üå£

[module/eth1]
type = internal/network
interface = enp37s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = "üñß "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = "%a %d"
date-alt = %a %b %d

time = %H:%M
time-alt = %H:%M%p

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/weather]
type = custom/script
exec = curl -s 'wttr.in/Montevideo?format=3'
label = "%output%"
click-left = $TERMINAL -e w3m wttr.in/Montevideo &
interval = 900

format-underline = #7f0707

[module/volume]
type = custom/ipc
hook-0 = ~/.config/polybar/polygetvol.sh
click-left = $TERMINAL -e pulsemixer &
click-right = ~/.config/polybar/polysetvol.sh -m 
scroll-up = ~/.config/polybar/polysetvol.sh -i +3%
scroll-down = ~/.config/polybar/polysetvol.sh -i -3%
initial = 1

format-underline = #a8e3f1

[module/battery]
type = custom/script
exec = ~/.config/polybar/polygetbat.sh
label = "%output%"
interval = 20

[module/brightness]
type = custom/ipc
hook-0 = light -G | sed 's/\.[0-9]*//'
format-prefix = "üí°: "
scroll-up = ~/.config/polybar/polysetbright.sh -A 10 
scroll-down = ~/.config/polybar/polysetbright.sh -U 10 
click-left = ~/.config/polybar/polysetbright.sh -A 5 
click-right = ~/.config/polybar/polysetbright.sh -U 5 

initial = 1

[settings]
screenchange-reload = true
