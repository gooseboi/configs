[colors]
background = #222
background-alt = #2d2d2d
foreground = #dfdfdf
foreground-alt = #888
primary = #ffb52a
secondary = #e60053
alert = #bd2c40

[bar/main]
width = 100%
height = 2.5%
radius = 0.0
fixed-center = false
enable-ipc = true
monitor = ${env:MONITOR:eDP}

background = ${colors.background}
foreground = ${colors.foreground}

border-size = 0
line-size = 3
padding = 1
module-margin = 1

underline-size = 3

font-0 = "NotoSansMono:size=8;1"
font-1 = "mplus Nerd Font:size=9;1"
font-2 = "JoyPixels:fontformat=truetype:scale=8"
font-3 = "NotoSansSymbols2:size=10;1"

modules-left = date bspwm
modules-center =
modules-right = weather pacman-packages eth1 wlan mpd volume xkeyboard memory cpu brightness battery

tray-position = left
tray-padding = 2
tray-maxsize = 24
tray-background = ${colors.background-alt}

wm-restack = bspwm

[global/wm]
margin-top = 0

[module/xwindow]
type = internal/xwindow
label = %title:0:30:...%

[module/bspwm]
type = internal/bspwm
pin-workspaces = false
enable-click = true
enable-scroll = false

label-focused = " %name% "
label-focused-underline = ${colors.primary}
label-focused-background = ${colors.background-alt}

label-occupied = " %name% "
label-occupied-foreground = #ffaa00
label-occupied-background = ${colors.background}

label-urgent = " %name% "
label-urgent-underline = ${colors.alert}
label-urgent-background = ${colors.background}

label-empty = " %name% "
label-empty-foreground = ${colors.foreground-alt}
label-empty-background = ${colors.background}

[module/xkeyboard]
type = internal/xkeyboard
format-prefix = "‚å® "

; List of indicators to ignore
blacklist-0 = num lock
blacklist-1 = scroll lock

label-layout = %layout%
label-layout-padding = 0

[module/cpu]
type = internal/cpu
interval = 2
format-prefix = "üíª "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #f90000
label = CPU:%percentage:2%%

[module/memory]
type = internal/memory
interval = 2
format-prefix = "üóç "
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #4bffdc
label = RAM: %percentage_used:2%%

[module/wlan]
type = internal/network
interface = wlp2s0
interval = 5.0

format-connected = <ramp-signal> <label-connected>
format-connected-underline = #9f78e1
label-connected = %essid%: %local_ip%

label-disconnected =

ramp-signal-0 = üåß
ramp-signal-1 = üå¶
ramp-signal-2 = üå•
ramp-signal-3 = üå§
ramp-signal-4 = üå£

[module/eth1]
type = internal/network
interface = enp37s0
interval = 3.0

format-connected-underline = #55aa55
format-connected-prefix = "üñß "
format-connected-prefix-foreground = ${colors.foreground-alt}
label-connected = %local_ip%

format-disconnected =

[module/date]
type = internal/date
interval = 5

date = "%a %d"
date-alt = %a %b %d

time = %H:%M
time-alt = %H:%M%p

format-prefix =
format-prefix-foreground = ${colors.foreground-alt}
format-underline = #0a6cf5

label = %date% %time%

[module/weather]
type = custom/script
exec = curl -s 'wttr.in/Montevideo?format=3'
label = "%output%"
click-left = $TERMINAL -e w3m wttr.in/Montevideo &
interval = 900

format-underline = #7f0707

[module/volume]
type = custom/ipc
hook-0 = polygetvol
click-right = $TERMINAL -e pulsemixer &
click-left = polysetvol -m
scroll-up = polysetvol -i +3%
scroll-down = polysetvol -i -3%
initial = 1

format-underline = #a8e3f1

[module/battery]
type = custom/script
exec = polygetbat
label = "%output%"
interval = 20

[module/brightness]
type = custom/ipc
hook-0 = polygetbright
format-prefix = "üí°: "
scroll-up = polysetbright -A 10
scroll-down = polysetbright -U 10
click-left = polysetbright -A 5
click-right = polysetbright -U 5
initial = 1

[module/pacman-packages]
type = custom/ipc
hook-0 = pacman -Qu | wc -l
format-prefix = "üì¶ "
click-left = update-packages
initial = 1

[module/mpd]
type = custom/ipc
hook-0 = polygetmusic
format-prefix = "üéú: "
click-left = mpc toggle
click-right = $TERMINAL -e ncmpcpp
scroll-up = mpc prev
scroll-down = mpc next
initial = 1

[settings]
screenchange-reload = true
format-background = ${colors.background-alt}
