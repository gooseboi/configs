#!/bin/sh

walldir="$HOME/wallpapers"

choice="$(printf "%s\\nrandom\\nrandom keep" "$(ls "$walldir")" | rofi -dmenu -i -p "Choose a background")"
[ -z "$choice" ] && exit

if [ "$choice" = "random" ]; then
	setbg "$walldir"
elif [ "$choice" = "random keep" ]; then
	setbg -r "$walldir"
else
	setbg "$(printf "$walldir/%s" "$choice")"
fi
